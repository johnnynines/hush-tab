{
  "manifest_version": 3,
  "name": "Hush Tab Audio Detector",
  "version": "1.1.0",
  "description": "Detects and manages browser tabs playing audio with intelligent ad detection for YouTube, Hulu, and ESPN",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "webRequest",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.hulu.com/*",
    "*://*.espn.com/*",
    "*://*.nbc.com/*",
    "*://*.nbcuni.com/*",
    "*://plus.espn.com/*",
    "*://watch.espn.com/*",
    "*://*.bamgrid.com/*",
    "*://*.bamtech.co/*",
    "*://*.espncdn.com/*",
    "*://*.disneystreaming.com/*",
    "*://*.doubleclick.net/*",
    "*://*.googlesyndication.com/*",
    "*://*.googleadservices.com/*",
    "*://*.google-analytics.com/*",
    "*://*.moatads.com/*",
    "*://*.2mdn.net/*",
    "*://*.adskeeper.com/*",
    "*://*.adservice.google.com/*",
    "*://*.imasdk.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content-youtube.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.hulu.com/*"],
      "js": ["content-hulu.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.espn.com/*",
        "*://plus.espn.com/*",
        "*://watch.espn.com/*",
        "*://*.bamgrid.com/*",
        "*://*.bamtech.co/*",
        "*://*.espncdn.com/*",
        "*://*.disneystreaming.com/*"
      ],
      "js": ["content-espn.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": [
        "*://*.nbc.com/*",
        "*://*.nbcuni.com/*"
      ],
      "js": ["content-nbc.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "audio-detector@example.com",
      "strict_min_version": "109.0"
    }
  }
}
